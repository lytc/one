<h3>Template</h3>
<p>One.js Template compiles JavaScript templates into functions that can be evaluated for rendering. Useful for rendering complicated bits of HTML from JSON data sources</p>
<% highlight_syntax :javascript do %>
var tpl = 'Hi <%%= this.name %>, welcome to "<%%= this.lib %>"!'
var content = $.template(template, {name: 'Lytc', lib: 'One.js'})
=> 'Hi Lytc, welcome to "One.js"!'

var template = $.template(
  "<%% this.items.forEach(function(item) { %>",
    "<li><%%= item %></li>",
  "<%% }) %>"
)
template.render({items : ['foo', 'bar', 'baz']})
=> "<li>foo</li>  <li>bar</li>  <li>baz</li>"
<% end %>

